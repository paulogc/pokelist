<h1>Pokemon</h1>
{{#if isLoading}}
  <div>...Loading</div>
{{else}}
  {{input type="text" class="form-control" value=filter placeholder="Search"}}
  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    {{#each filteredPokemon as |pokemon|}}
      <tr>
        <td>{{pokemon.name}}</td>
        <td>
          {{#link-to 'pokemon.edit' pokemon.id}}Edit{{/link-to}}
          {{#link-to 'pokemon.view' pokemon.id}}Details{{/link-to}}
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{/if}}