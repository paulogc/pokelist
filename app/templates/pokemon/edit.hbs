<h1>Edit</h1>

<div class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-10">
      <img src="{{model.image}}" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="Pokemon Name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Abilities:</label>
    <div class="col-sm-10">
      {{#each model.abilities as |ability|}}
        {{input type="text" value=ability.name class="form-control" placeholder="Ability Name"}}
      {{/each}}
    </div>
  </div>
</div>
