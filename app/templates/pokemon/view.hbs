<h1>View</h1>

{{#if isLoading}}
  <div>...Loading</div>
{{else}}
  <div class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-10">
        <img src="{{model.image}}" />
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Last update</label>
      <div class="col-sm-10">
        <label class="form-control">{{moment lastUpdate 'MM-DD-YYYY'}}</label>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <label class="form-control">{{model.name}}</label>
      </div>
    </div>
    {{#each model.abilities as |ability|}}
      <div class="form-group">
        <label class="col-sm-2 control-label">Abilities:</label>
        <div class="col-sm-10">
            <label class="form-control">{{ability.name}}</label>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}