<h1>Create</h1>

{{#if willSave }}
  {{#modal-dialog translucentOverlay=true targetAttachment="center"}}
    <div>Are you sure?</div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" class="btn btn-default" {{action 'savePokemon'}} >Yes</button>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" {{action 'cancel'}} class="btn btn-default" >No</button>
    </div>
  {{/modal-dialog}}
{{/if}}

{{#if isSaved }}
  {{#modal-dialog translucentOverlay=true targetAttachment="center"}}
    <div>Pokemon succesfully saved</div>
      {{#link-to 'pokemon'}}
        <button type="submit" class="btn btn-primary" class="btn btn-default" >Ok</button>
			{{/link-to}}
  {{/modal-dialog}}
{{/if}}

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=pokemonName class="form-control" placeholder="Pokemon Name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Ability:</label>
    <div class="col-sm-10">
        {{input type="text" value=abilityName class="form-control" placeholder="Ability Name"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action 'willSave'}}>Save</button>
    </div>
  </div>
</div>