<h1>Create</h1>

{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<div class="form-horizontal">
  <div class="form-group">
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=pokemoName class="form-control" placeholder="Pokemon Name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Ability:</label>
    <div class="col-sm-10">
        {{input type="text" value=abilityName class="form-control" placeholder="Ability Name"}}
    </div>
  </div>
   <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'savePokemon' model}}>Save</button>
    </div>
  </div>
</div>